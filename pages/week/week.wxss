.page{
  min-height: 100vh;
  background-color: #F6F8FA;
}
 
.new-content{
  /* display: flex;  */
   height: 100%;
  width: 100%;
  margin-bottom: 10%; 
   flex-wrap: wrap; 
   justify-content: flex-start;
  align-items: flex-start;
  margin-left: 120rpx;
  margin-top: -120rpx;
}
 
.item{
  background: #ffff;
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 200rpx;
  margin-top: 2rpx;
  margin-left: 2rpx;
  border-radius: 15rpx;
}
 
.item-sub{
  display: flex;
  flex-direction: column;
}
 
.item-sub-content{
  display: flex;
  flex-direction: row;
}
 
.table-day-text{
  font-size: 27rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #ffffff;
  margin-left: 60rpx;
  margin-top: 10rpx;
  
}
 
.table-calendar-point{
width: 15rpx;
height: 15rpx;
background: #44CFC7;
border-radius: 50%;
margin-left: 9rpx;
margin-top: 13rpx;
}
 
.table-calendar-title{
  font-size: 14rpx;
  font-family: PingFang SC;
  margin-left: 40rpx;
  color: #ffffff;
  margin-top: 4rpx;
  text-align: center; 
}
/* 时间栏 */
.time-bar {
  display: flex;
  flex-direction: column; /* 修改为水平排列 */
  width: 120rpx; /* 根据需要调整宽度 */
  height: 120rpx; /* 根据需要调整高度 */
  background-color: #F6F8FA; /* 根据需要调整背景颜色 */
} 

.time-item {
  flex: 1; /* 使每个时间项平均分配空间 */
  text-align: center; /* 居中显示时间文本 */
  font-size: 20rpx; /* 根据需要调整字体大小 */
  color: #666666; /* 根据需要调整字体颜色 */
  margin-top: 70rpx;
} 
