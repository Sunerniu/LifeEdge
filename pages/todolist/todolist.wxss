.list-item {
  margin-top: 40rpx;
  height: auto;
  width: 100%;
  padding: 0 20rpx;
  background: #fff;
  border: 1px solid rgba(0, 0, 0, 0.1);
  border-left: none;
  border-right: none;
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
  align-items: left;
  transition: all 300ms ease;
}

.tick-circle {
    width: 50rpx;
    height: 50rpx;
    margin-top: 20rpx;
    margin-right: 20rpx;
    font-size:50rpx;
    text-align: center;
    line-height:50rpx;
}

.text-box {
  width: 80%;
  position: relative;
  min-height: 80rpx;
  margin-top:17rpx;
}
.text-line-through{
  text-decoration:line-through;
}
.text-box text {
  display: block;
  word-break:break-all; 
  word-wrap:break-word;
  box-sizing: border-box;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  overflow-y:hidden; 
  word-break:break-all; 
  word-wrap:break-word;
  font-size: 13px; 
  padding-top: 3%; 
  padding-bottom: 3%;
}
.text-hidden{
  visibility: hidden;
}
.text-box .weui-textarea {
  box-sizing: border-box;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  overflow-y:hidden; 
  word-break:break-all; 
  word-wrap:break-word;
  font-size: 13px; 
}
.text-transparent{
  color:rgba(52, 52, 52,0);
}
.add-icon{
  width: 50rpx;
  height: 50rpx;
  margin-top: 20rpx;
  margin-right: 20rpx;
  font-size:50rpx;
  text-align: center;
  line-height:50rpx;
}
.icon-detail {
    width: 100rpx;
    height: 100rpx;
    font-size: 50rpx;
    line-height: 50rpx;
    position: absolute; /* Add this line */
    right: 50rpx; /* Align to the right */
    bottom: 50rpx; /* Align to the bottom */
}

.icon-remove{
    width: 40rpx;
    height: 40rpx;
    margin-top:25rpx;
    text-align: center;
}
.footer{
  text-align: center;
  width:100%;
  color:#a6a6a6;
  margin-top:20px;

}
